# alias ohmyzsh="mate ~/.oh-my-zsh"

# 1Password
if [ -f "$HOME/.config/op/plugins.sh" ]; then
    source "$HOME/.config/op/plugins.sh"
fi
export OP_ACCOUNT="my.1password.com"

